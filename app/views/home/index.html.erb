<section id="jobs">
  <% @jobs.each do |job| %>
    <% if job.expired? == false %>
      <div class="jobs">
        <h3><%= job.title %></h1>
        <p><%= job.location %></p>
        <p><%= job.company.name %></p>
        <p><%= job.job_type.name %></p>
        <% if job.company.premium? %>
          <p><em>Empresa Premium</em></p>
        <% end %>
        <p><%= job.category.name %></p>
        <% if job.recent? %>
          <p><em>Novidade</em></p>
        <% end %>
        <%= link_to 'Ver mais', job %>
      </div>
      <hr>
    <% end %>
  <% end %>
</section>
<aside>
  <h4>Empresas</h4>
  <% @companies.each do |company| %>
    <%= link_to company.name, company %>
  <% end %>
</aside>
<hr>
<aside>
  <h4>Categorias</h4>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>
</aside>
<hr>
<aside>
<h4>Tipos de Contratação</h4>
<% @job_types.each do |jobtype| %>
  <%= link_to jobtype.name, jobtype %>
<% end %>
</aside>
